{
  "compilerOptions": {
    /*
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
   */
    "rootDir": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": [ "es6", "es2015", "dom" ],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": false,
    "target": "ES6",
    "allowSyntheticDefaultImports": true
  }, 
  "exclude": [
    "./src/**/*.spec.ts",
    // used for webpack h5/jq/static .js
    // "./src/gridstack-h5.ts",
    // "./src/gridstack-jq.ts",
    // "./src/gridstack-static.ts",
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "typeroots": [
    "./node_modules/@types"
  ]
}
